{
	"name": "My Terraform Workspace",
	"image":"aws-terraform-ado:local",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash"
			},
			"extensions": [
				"BeardedBear.beardedtheme",
				"PKief.material-icon-theme",
				"streetsidesoftware.code-spell-checker",
				"EditorConfig.EditorConfig",
				"seatonjiang.gitmoji-vscode",
				"hashicorp.hcl",
				"hashicorp.terraform",
				"esbenp.prettier-vscode"
			]
		}
	},
	"initializeCommand": "export DOCKER_BUILDKIT=1 && docker build --platform linux/$(arch) -t aws-terraform-ado:local -f .devcontainer/Dockerfile --build-arg ARCH=$(arch) .",
	"postCreateCommand": "aws --version && eksctl version && terraform -version"
}
